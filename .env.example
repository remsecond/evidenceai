# Application
NODE_ENV=development
PORT=3000

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password

# AI Services
OPENAI_API_KEY=your-openai-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-oauth-client-id
GOOGLE_CLIENT_SECRET=your-oauth-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_SHEET_ID=your-tracking-spreadsheet-id

# Google API Configuration (Service Account - Alternative)
GOOGLE_CLIENT_EMAIL=your-service-account-email
GOOGLE_PRIVATE_KEY=your-service-account-private-key
GOOGLE_PROJECT_ID=your-project-id

# Monitoring
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Tuning
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_MS=30000
MAX_DOCUMENT_SIZE_MB=10

# Feature Flags
ENABLE_PATTERN_DETECTION=true
ENABLE_RELATIONSHIP_MAPPING=true
ENABLE_TIMELINE_GENERATION=true

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1000

# Security
JWT_SECRET=your-jwt-secret
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL_MS=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AI Model Configuration
DEFAULT_MODEL=gpt-4
MODEL_TIMEOUT_MS=15000
MAX_TOKENS=2000
TEMPERATURE=0.3

# Document Processing
MAX_EMAIL_SIZE_KB=10000
MAX_DOCUMENT_SIZE_KB=20000
MAX_MESSAGE_SIZE_KB=5000

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_STORAGE_SIZE_GB=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Monitoring Stack
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_PROVISIONING_PATH=/etc/grafana/provisioning

# Development Tools
ENABLE_DEBUG_LOGGING=true
ENABLE_API_DOCS=true
ENABLE_PLAYGROUND=true

# Documentation
API_DOCS_PATH=/docs
SWAGGER_UI_PATH=/api-docs

# Testing
TEST_TIMEOUT_MS=5000
MOCK_EXTERNAL_SERVICES=false

# Deployment
DEPLOYMENT_ENV=development
ENABLE_AUTO_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=3
